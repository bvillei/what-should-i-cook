<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#F4EB97">
    <Button
            android:text="Roll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rollButton"
            app:layout_constraintBottom_toBottomOf="@+id/typeSpinner"
            app:layout_constraintStart_toEndOf="@+id/typeSpinner"
            app:layout_constraintEnd_toStartOf="@+id/vegetarianCheckBox" android:layout_marginEnd="53dp"
            android:layout_marginRight="53dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="134dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="1dp" android:layout_marginRight="1dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultsTextView"
            android:textSize="100sp" android:gravity="center"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="230dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <CheckBox
            android:text="Vegetarian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/vegetarianCheckBox"
            android:textColorLink="#5C5C5C"
            app:layout_constraintStart_toEndOf="@+id/rollButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="49dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <Button
            android:text="Show All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/listButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="53dp" android:id="@+id/typeSpinner"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toStartOf="@+id/rollButton" android:layout_marginBottom="45dp"
            app:layout_constraintTop_toTopOf="@+id/divider" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="17dp"
            android:layout_marginRight="17dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
