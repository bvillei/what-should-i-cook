<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#F4EB97">
    <Button
            android:text="Roll"
            android:layout_width="0dp"
            android:layout_height="99dp" android:id="@+id/rollButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="2dp"/>
    <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="199dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultsTextView"
            android:textSize="100sp" android:gravity="center"
            android:layout_marginTop="198dp"
            android:layout_marginBottom="199dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/divider"/>
    <Button
            android:text="Show All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/listButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add New"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="154dp"
            android:layout_height="53dp" android:id="@+id/typeSpinner"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="23dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/rollButton"/>
    <Switch
            android:text="Vegetarian"
            android:layout_width="117dp"
            android:layout_height="28dp" android:id="@+id/vegetarianSwitch"
            android:layout_marginTop="34dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" android:layout_marginBottom="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/rollButton"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
